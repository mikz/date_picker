<%- form_for :user, @user, :url => {:action => action} do |f|-%>
<%= error_messages_for 'user'%>
<fieldset>
  <label><%= t(controller.action_name, :scope => [controller.controller_class_name.underscore, :action ])%></label>
  <p><%=f.label :login%><%= f.text_field :login%></p>
  <p><%=f.label :password %><%= f.password_field :password%></p>
  <p><%=f.label :password_confirmation%><%= f.password_field :password_confirmation%></p>
  <p><%=f.label :email%><%= f.text_field :email%></p>
  <p><%=f.submit t(:register)%></p>
</fieldset>
<%-end-%>